<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <%= f.email_field :email, :autofocus => true, placeholder: 'Your Email' %>
    <%= f.text_field :name, :autofocus => true, placeholder: 'Your Name' %>
    <%= f.text_field :mobile_no, :autofocus => true, placeholder: 'Mobile Number' %>
    <%= f.hidden_field :password, value: 'testit_user' %>
    <%= f.hidden_field :password_confirmation, value: 'testit_user' %>

    <%= f.hidden_field :is_guest, value: false %>



    <div><%= f.submit "Sign up", class: 'red_button', id: 'sign_up_btn', style: 'width: 98%' %></div>
<% end %>

<%= render "devise/shared/links" %>
