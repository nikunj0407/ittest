  <br>
  <ol id='TF'>
    <% @true_false.each_with_index do |tf, index| %>
        <li>
          <div class="srno_field"><%= (index+1) %></div>
          <div class="que_field"><%= tf.cipher %></div>
          <div class="ans_field"><input type="radio" name="<%= tf.id %>" value="True">True &nbsp;&nbsp;
            <input type="radio" name="<%= tf.id %>">False
          </div>
        </li>
    <% end %>
